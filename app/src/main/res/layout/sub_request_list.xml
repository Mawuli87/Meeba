<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="8dp"
    app:cardCornerRadius="8dp"
    android:id="@+id/cardViewrequestsub"
    android:layout_margin="5dp"
    android:layout_height="130dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:paddingEnd="5dp"
        android:paddingStart="1dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_margin="3dp"
            android:orientation="vertical"
            android:padding="5dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:paddingStart="8dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed"
                    android:text="@string/company_name"
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/order_owner_namesub"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="  Company name"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginStart="8dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed"
                    android:text="Date-Time: "
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/date_orderedsub"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" date time"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="16sp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:paddingStart="8dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed"
                    android:text="Order Status: "
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    android:textColor="@color/black" />

                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/order_statussub"
                    android:text="Status"
                    android:textSize="16sp"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_height="wrap_content"/>

            </LinearLayout>



        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:weightSum="4"
            android:layout_marginStart="4dp"
            android:paddingBottom="10dp"

            android:layout_height="wrap_content">
            <Button
                android:layout_width="0dp"
                android:id="@+id/btn_accept_requestsub"
                android:textAllCaps="false"
                android:textSize="12sp"
                android:layout_weight="1"
                android:text="Accept"
                android:visibility="visible"
                android:layout_height="wrap_content"/>



            <Button
                android:layout_width="0dp"
                android:id="@+id/btn_view_requestsub"
                android:textAllCaps="false"
                android:layout_marginTop="40dp"
                android:text="View"
                android:layout_weight="1"
                android:textSize="12sp"
                android:visibility="gone"
                android:layout_height="wrap_content"/>


            <Button
                android:layout_width="0dp"
                android:id="@+id/btn_complete_requestsub"
                android:textAllCaps="false"
                android:visibility="gone"
                android:layout_weight="2"
                android:layout_marginStart="4dp"
                android:textSize="12sp"
                android:layout_marginTop="40dp"
                android:text="Complete Sub-Request"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>